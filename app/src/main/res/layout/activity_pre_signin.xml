<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.news.autodocs.PreSignin">

    <Button
        android:id="@+id/buttonAsMechanic"
        android:layout_width="match_parent"
        android:background="@drawable/button_shape"
        android:textColor="#f9f9f9"
        android:layout_height="wrap_content"
        android:text="As Mechanic"
        android:layout_above="@+id/buttonAsUser"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp" />

    <Button
        android:id="@+id/buttonAsUser"
        android:layout_width="match_parent"
        android:background="@drawable/button_shape"
        android:textColor="#f9f9f9"
        android:layout_height="wrap_content"
        android:text="As User"
        android:layout_marginBottom="149dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:background="@drawable/button_shape"
        android:textColor="#f9f9f9"
        android:layout_height="wrap_content"
        android:text="Notisfy"
        />
</RelativeLayout>
